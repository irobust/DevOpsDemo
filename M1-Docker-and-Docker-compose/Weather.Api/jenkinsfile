def image
pipeline {
    agent any
    stages {
        stage('Verify') {
            steps {
                script {
                    image = docker.build("irobust/weatherapi:jenkins", "M1-Docker-and-Docker-compose/Weather.Api")
                }
            }
        }
        
        stage('Smoke Test') {
            steps {
                script {
                    container = image.run()
                    container.stop()
              }
            }
        }
        stage('Push') {                 
            steps { 
                script {
                    withDockerRegistry([credentialsId: "docker-hub", url: "" ]) {        
                        image.push()
                    }     
                }
            }
        }
    }
}